<?xml version="1.0" encoding="utf-8"?>
<Contract xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <version>0.2.4</version>
  <uid>example_contract_001</uid>
  <title>Example Contract 001</title>
  <synopsis>This is an example contract, changing the orbit in 2 steps.</synopsis>
  <description>Complete the objectives to fulfill this contract. 
First, change the Periapsis to within 150 and 200 km altitude. 
Next, change the Apoapsis to within 150 and 200 km altitude.
  </description>
  <expiration>3600.0</expiration>
  <deadline>1800.0</deadline>
  <isAutoAccepted>true</isAutoAccepted>
  <requirements>
    <Requirement>
      <uid>change_periapsis_150_200km</uid>
      <type>orbit</type>
      <title>Change Periapsis</title>
      <synopsis>Change Periapsis to 150~200km.</synopsis>
      <description>Change the orbit to a low orbit with a Periapsis between 150.000 and 200.000 meter.</description>
      <isCompletedOnAchievement>false</isCompletedOnAchievement>
      <isHidden>false</isHidden>
      <completeInOrder>true</completeInOrder>
      <Orbit>
        <targetBody>Earth</targetBody>
        <minPeriapsis>150000</minPeriapsis>
        <maxPeriapsis>200000</maxPeriapsis>
      </Orbit>
    </Requirement>
    <Requirement>
      <uid>change_apoapsis_150_200km</uid>
      <type>orbit</type>
      <title>Change Apoapsis</title>
      <synopsis>Change Apoapsis to 150~200km.</synopsis>
      <description>Change the orbit to a low orbit with a Apoapsis between 150.000 and 200.000 meter.</description>
      <isCompletedOnAchievement>true</isCompletedOnAchievement>
      <isHidden>false</isHidden>
      <completeInOrder>true</completeInOrder>
      <Orbit>
        <targetBody>Earth</targetBody>
        <minApoapsis>150000</minApoapsis>
        <maxApoapsis>200000</maxApoapsis>
      </Orbit>
    </Requirement>
  </requirements>
  <completionCondition>all</completionCondition>
  <actions>
    <Action>
      <trigger>onContractReject</trigger>
      <type>showMessage</type>
      <showMessage>Oh no, you are going to ignore this contract?</showMessage>
      <uid>example_contract_001_0</uid>
    </Action>
    <Action>
      <trigger>onContractComplete</trigger>
      <type>showMessage</type>
      <showMessage>Congratulations! You pounced the example contract.</showMessage>
      <uid>example_contract_001_1</uid>
    </Action>
    <Action>
      <trigger>onContractFail</trigger>
      <type>showMessage</type>
      <showMessage>Keep persevering; The road to success is pawed with failure.</showMessage>
      <uid>example_contract_001_2</uid>
    </Action>
    <Action>
      <trigger>onRequirementMaintained</trigger>
      <type>showMessage</type>
      <showMessage>Now the next ball of yarn!</showMessage>
      <onRequirement>change_periapsis_150_200km</onRequirement>
      <uid>example_contract_001_3</uid>
    </Action>
  </actions>
  <prerequisite>
    <maxNumOfferedContracts>4</maxNumOfferedContracts>
    <maxNumAcceptedContracts>2</maxNumAcceptedContracts>
  </prerequisite>
</Contract>