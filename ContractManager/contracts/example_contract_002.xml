<?xml version="1.0" encoding="utf-8"?>
<Contract xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <uid>example_contract_002</uid>
  <title>Example Contract</title>
  <synopsis>This is an example contract.</synopsis>
  <description>Complete the objectives to fulfill this contract.</description>
  <prerequisites>
    <Prerequisite>
      <type>maxNumOfferedContracts</type>
      <maxNumOfferedContracts>1</maxNumOfferedContracts>
    </Prerequisite>
    <Prerequisite>
      <type>maxNumAcceptedContracts</type>
      <maxNumAcceptedContracts>1</maxNumAcceptedContracts>
    </Prerequisite>
  </prerequisites>
  <requirements>
    <Requirement>
      <type>orbit</type>
      <title>Change orbit</title>
      <synopsis>Change orbit to be xyz.</synopsis>
      <description>Change the orbit by increasing the apoapsis, then increasing the periapsis.</description>
      <isCompletedOnAchievement>true</isCompletedOnAchievement>
      <isHidden>false</isHidden>
      <completeInOrder>true</completeInOrder>
      <completionCondition>all</completionCondition>
      <Orbit>
        <targetBody>Earth</targetBody>
        <minApoapsis>150000</minApoapsis>
        <maxApoapsis>160000</maxApoapsis>
        <minPeriapsis>150000</minPeriapsis>
        <maxPeriapsis>160000</maxPeriapsis>
      </Orbit>
    </Requirement>
  </requirements>
  <completionCondition>all</completionCondition>
  <actions>
    <Action>
      <trigger>onContractComplete</trigger>
      <type>showMessage</type>
      <showMessage>Congratulations! You pounced the example contract.</showMessage>
    </Action>
    <Action>
      <trigger>onContractFail</trigger>
      <type>showMessage</type>
      <showMessage>Keep persevering; The road to success is pawed with failure.</showMessage>
    </Action>
  </actions>
</Contract>